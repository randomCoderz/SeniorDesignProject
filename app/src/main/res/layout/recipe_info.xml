<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    android:paddingTop="?android:attr/actionBarSize">

    <Button
        android:id="@+id/addToCalendar"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/addToCalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/missingToCart" />

    <Button
        android:id="@+id/selectedToCart"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_above="@+id/addToCalendar"
        android:layout_toStartOf="@+id/instructions"
        android:text="@string/selectedToCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/missingToCart"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/missingToCart"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/missingToCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addToCalendar"
        app:layout_constraintStart_toEndOf="@+id/selectedToCart" />

    <Button
        android:id="@+id/completed"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/instructions"
        android:text="@string/completed"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="166dp"
        android:layout_marginEnd="87dp"
        android:text="@string/instructions"

        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!--<ListView-->
        <!--android:id="@+id/ingredientList"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="279dp"-->
        <!--android:layout_above="@+id/addToCalendar"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginStart="0dp"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent" />-->

    <TextView
        android:id="@+id/readyInMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/instructions"
        android:layout_marginBottom="251dp"
        android:text="readyinmin" />

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recipeImage"
        android:layout_marginStart="47dp"
        android:text="TextView" />




</RelativeLayout>